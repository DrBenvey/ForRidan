<script src="~/js/vm/product.vm.js" type="text/javascript"></script>

<div id="ProductsGroup" class="div-group">
    <h1>Имеющиеся продукты</h1>
    <table>
        <thead>
            <tr>
                <td>id</td>
                <td>имя</td>
                <td>вес</td>
                <td colspan="2">действия</td>
            </tr>
        </thead>
        <tbody data-bind="foreach: Products">
            <tr>
                <td data-bind="text: id"></td>
                <td>
                    <input data-bind="value: name" style="width: -webkit-fill-available;">
                </td>
                <td>                                      
                    <input type="number" step="0.01" data-bind="value: weight" style="width: -webkit-fill-available;">
                </td>
                <td>
                    <button data-bind="click: $root.deleteProducts.bind($data,id)" style="width: -webkit-fill-available;">удалить</button>
                </td>
                <td>
                    <button data-bind="click: $root.updateProducts.bind($data,id)" style="width: -webkit-fill-available;">сохранить</button>
                </td>
            </tr>
        </tbody>
    </table>
    <h1>Добавить продукт</h1>
    <table>
        <thead>
            <tr>
                <td>имя</td>
                <td>вес</td>
                <td>действиe</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input data-bind="value: Product().name" style="width: -webkit-fill-available;">
                </td>
                <td>
                    <input type="number" step="0.01" data-bind="value: Product().weight" style="width: -webkit-fill-available;">
                </td>
                <td>
                    <button data-bind="click: addProducts" style="width: -webkit-fill-available;">добавить</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>